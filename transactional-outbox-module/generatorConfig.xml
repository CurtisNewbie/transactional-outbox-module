<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <classPathEntry
            location="/home/zhuangyongj/.m2/repository/mysql/mysql-connector-java/8.0.25/mysql-connector-java-8.0.25.jar"/>
    <context id="dbcontext" defaultModelType="flat" targetRuntime="MyBatis3Simple">

        <commentGenerator type="com.curtisnewbie.generator.CustomCommentGenerator">
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/fileServer?serverTimezone=UTC"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.curtisnewbie.module.outbox.dao" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.curtisnewbie.module.outbox.dao" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.curtisnewbie.module.outbox.dao"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="consumed_message" mapperName="ConsumedMessageMapper" domainObjectName="ConsumedMessageEntity">
            <property name="enableSelectByExample" value="false"/>
            <property name="enableDeleteByExample" value="false"/>
            <property name="enableCountByExample" value="false"/>
            <property name="enableUpdateByExample" value="false"/>
        </table>
    </context>
</generatorConfiguration>
